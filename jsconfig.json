{
  // 支持 @ 的别名解析
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve"
  },
  "vueCompilerOptions": {
    // "target": 2.7,
    "target": 2, // For Vue version <= 2.6.14
    "extensions": [
      ".vue"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
